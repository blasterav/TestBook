<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_books_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="@dimen/horizontal_padding"
        android:paddingRight="@dimen/horizontal_padding"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/list_books_sort_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sort_button"
            android:padding="4dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/sort_name"
            android:layout_marginRight="16dp"/>
        <TextView
            android:id="@+id/list_books_sort_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sort_button"
            android:padding="4dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/sort_rating"/>
    </LinearLayout>

</LinearLayout>
